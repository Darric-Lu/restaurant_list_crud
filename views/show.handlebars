<h1 class="mb-1 restaurant-show-title">{{restaurant.name}}</h1>
<div class="container">
  <div class="row">
    <div class="mx-auto px-5">
      <a class="btn btn-secondary px-3 mx-3" href="/">Back</a>
      <a class="btn btn-secondary px-3" href="/restaurants/{{restaurant._id}}/edit">Edit</a>
      <form class="btn" action="/restaurants/{{restaurant._id}}/delete" method="POST">
        <button type="submit" class="btn btn-major px-3">Delete</button>
      </form>
    </div>
  </div>


  <div class="row">
    <div class="col-12 col-md-10 mx-auto">

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-utensils pr-2"></i>
          類別：
        </span>
        {{restaurant.category}}
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-map-marker-alt pr-2"></i>
          地址：
        </span>
        {{#if restaurant.location}}
        {{restaurant.location}}
        {{else}}
        未知
        {{/if}}
        {{#if restaurant.google_map}}
        <a href="{{restaurant.google_map}}" class="text-secondary" target="_blank">
          <i class="fas fa-location-arrow pr-2 fa-xs"></i>
        </a>
        {{/if}}
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-mobile-alt pr-2"></i>
          電話：
        </span>
        {{#if restaurant.phone}}
        {{restaurant.phone}}
        {{else}}
        未知
        {{/if}}
      </p>

      <p class="mb-5">
        {{restaurant.description}}
      </p>

      <img class="rounded mx-auto d-block mb-4 w-100" src="{{restaurant.image}}" alt="{{restaurant.name}}"
        onerror=this.src="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/5720/restaurants-list-cover.jpg"
        style="max-width: 600px;">
    </div>
  </div>
</div>